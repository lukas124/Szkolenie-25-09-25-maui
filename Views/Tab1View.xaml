<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:MauiStart.ViewModels"
             x:DataType="viewModels:MainViewModel"
             x:Class="MauiStart.Views.Tab1View">
    
    <ContentView.Content>
        
        <StackLayout>
            
            <Label Text="Name" />
                
            <Entry Text="{Binding Name, Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}}" />
                
            <Label Text="Notes" />
                
            <Entry Text="{Binding Notes, Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}}" />
                
            <Label Text="Done" />
                
            <Switch IsToggled="{Binding Done, Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}}" />
                
            <Button Text="Save"
                    Command="{Binding CreateItemCommand, Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}}" />
            
        </StackLayout>
        
    </ContentView.Content>
    
</ContentView>