<Border
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this"
    x:Class="MauiStart.Components.ButtonWithIcon"
    StrokeShape="RoundRectangle 20"
    Padding="4"
    BackgroundColor="White">

    <StackLayout Orientation="Horizontal"
                 VerticalOptions="CenterAndExpand"
                 HorizontalOptions="CenterAndExpand"
                 Margin="0"
                 Padding="0"
                 Spacing="0">

        <Image Source="{Binding Icon, Source={x:Reference this}}" />

        <Label Text="{Binding Text, Source={x:Reference this}}"
               Margin="0"
               VerticalTextAlignment="Center"/>

    </StackLayout>

    <Border.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Command, Source={x:Reference this}}"/>
    </Border.GestureRecognizers>

    <Border.Shadow>
        <Shadow Brush="Black"
                Offset="0,2"
                Opacity="0.3"
                Radius="4"/>
    </Border.Shadow>
</Border>