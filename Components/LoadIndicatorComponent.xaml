<?xml version="1.0" encoding="utf-8"?>

<ContentView  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="MauiStart.Components.LoadIndicatorComponent"
              x:Name="Root"
              HorizontalOptions="FillAndExpand"
              IsVisible="{Binding IsRunning, Source={x:Reference Root}}"
              VerticalOptions="FillAndExpand"
              BackgroundColor="White">

    <Grid IsVisible="{Binding IsRunning, Source={x:Reference Root}}">
        
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
            
            <ActivityIndicator IsRunning="{Binding IsRunning, Source={x:Reference Root}}" 
                               WidthRequest="50"
                               HeightRequest="50"
                               Color="Black"/>
            
            <Label Text="{Binding Message, Source={x:Reference Root}}" 
                   TextColor="Black" 
                   FontSize="16"
                   HorizontalOptions="Center"/>
            
        </StackLayout>
        
    </Grid>

</ContentView>